# Pinecone Recipe Management System
# Environment Configuration Template
# Copy this file to .env.dev for local development
# NEVER commit .env files with real credentials to version control

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgres://postgres:postgres@localhost:5432/pinecone_dev?sslmode=disable
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=pinecone_dev
DB_HOST=localhost
DB_PORT=5432

# ============================================
# JWT Authentication
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-256-bit-key-change-this-in-production
JWT_EXPIRY_HOURS=24

# ============================================
# USDA FoodData Central API
# ============================================
# Get your API key from: https://fdc.nal.usda.gov/api-key-signup.html
USDA_API_KEY=your-usda-api-key-here
USDA_API_BASE_URL=https://api.nal.usda.gov/fdc/v1

# ============================================
# Server Configuration
# ============================================
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
SERVER_ENV=development

# ============================================
# File Upload Configuration
# ============================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=5
ALLOWED_FILE_TYPES=jpg,jpeg,png,webp

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# Logging Configuration
# ============================================
# Options: debug, info, warn, error
LOG_LEVEL=debug
LOG_FORMAT=json

# ============================================
# Sentry Error Tracking (Optional)
# ============================================
# Get DSN from: https://sentry.io
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=10

# ============================================
# Session Configuration
# ============================================
SESSION_COOKIE_NAME=jwt_token
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=strict

# ============================================
# Development Tools
# ============================================
# Enable hot reload
HOT_RELOAD=true

# Enable debug mode
DEBUG=true

# Enable SQL query logging
LOG_SQL_QUERIES=false

# ============================================
# Testing Configuration
# ============================================
TEST_DATABASE_URL=postgres://postgres:postgres@localhost:5432/pinecone_test?sslmode=disable
TEST_JWT_SECRET=test-secret-for-unit-tests-only

# ============================================
# Frontend Configuration (for pinecone-web)
# ============================================
VITE_API_BASE_URL=http://localhost:8080/api/v1
VITE_APP_NAME=Pinecone
VITE_APP_VERSION=0.1.0
VITE_SENTRY_DSN=

# ============================================
# Production Notes
# ============================================
# For production (.env.prod), ensure:
# 1. Generate strong JWT_SECRET: openssl rand -base64 32
# 2. Generate strong DB_PASSWORD: openssl rand -base64 24
# 3. Use real USDA_API_KEY
# 4. Set SESSION_COOKIE_SECURE=true
# 5. Set ALLOWED_ORIGINS to your production domain
# 6. Set LOG_LEVEL=info or warn
# 7. Configure SENTRY_DSN for error tracking
# 8. Set SERVER_ENV=production
